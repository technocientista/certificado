var url = window.location.origin

var ativarHomologacao = function () {
		$('body').append(
			`<div class="barra-homologacao"> 
				<h1>Sistema em Homologação</h1>
				<p>Os dados dos sistemas em ambiente de homologação não são oficiais.</p>
			</div>

			<style rel="stylesheet" type="text/css">
				.barra-homologacao{
					position: fixed;
					background-color: #b61818;
					height: 40px;
					width: 100%;
					top: 0; 
					z-index: 5000;
					color: #fff;
					text-align: center;
				}

				.barra-homologacao h1{
					font-weight: bolder;
				   font-size: 20px;
				   margin: 0;
				}


				body, .navbar-fixed-top{
					margin-top: 40px;
				}
				.menu-sidebar.with-navbar {
					margin-top: 90px;
				}
			</style>`
		);
}
$(function() {
	if (url.toLowerCase().includes('homologacao') || 
		url.toLowerCase().includes('sistemas8')) {
			ativarHomologacao();
	}
})
